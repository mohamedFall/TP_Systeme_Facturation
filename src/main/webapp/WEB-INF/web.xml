<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	version="2.5">
	<display-name>TP_WEB</display-name>

	<!-- Gestion page d'accueil -->
	<servlet>
		<servlet-name>HomeServlet</servlet-name>
		<servlet-class>fr.epsi.router.HomeServlet</servlet-class>
	</servlet>


	<servlet-mapping>
		<servlet-name>HomeServlet</servlet-name>
		<url-pattern>/</url-pattern>
	</servlet-mapping>
	
	<!-- Gestion des clients -->
	<servlet>
		<servlet-name>ClientServlet</servlet-name>
		<servlet-class>fr.epsi.router.ClientServlet</servlet-class>
	</servlet>


	<servlet-mapping>
		<servlet-name>ClientServlet</servlet-name>
		<url-pattern>/clients</url-pattern>
	</servlet-mapping>
	
	<!-- Gestion des articles -->
	<servlet>
		<servlet-name>ArticleServlet</servlet-name>
		<servlet-class>fr.epsi.router.ArticleServlet</servlet-class>
	</servlet>


	<servlet-mapping>
		<servlet-name>ArticleServlet</servlet-name>
		<url-pattern>/articles</url-pattern>
	</servlet-mapping>
	
	<!-- Gestion des factures -->
	<servlet>
		<servlet-name>FactureServlet</servlet-name>
		<servlet-class>fr.epsi.router.FactureServlet</servlet-class>
	</servlet>


	<servlet-mapping>
		<servlet-name>FactureServlet</servlet-name>
		<url-pattern>/factures</url-pattern>
	</servlet-mapping>


</web-app>
